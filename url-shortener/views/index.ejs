<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
<body>
    <div class="container">

        <h1>URL Shortener</h1>
        <form action="/shortUrls" method="POST" class="row g-3">
            
            <div class="col">
                <label for="fullUrl" class="visually-hidden">URL</label>
                <input type="url" class="form-control" id="fullUrl" name="fullUrl" placeholder="URL">
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-success mb-3">Shorten Now!!!y</button>
            </div>
        </form>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Full URL</th>
                        <th>Shorten URL</th>
                        <th>Clicks</th>
                    </tr>
                </thead>
                <tbody>
                    <% shortUrls.forEach(shortUrl => { %>
                        <tr>
                            <td><a target="_blank" href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
                            <td><a target="_blank" href="<%= shortUrl.short %>">https://chinmay29hub-url-shortener.onrender.com/<%= shortUrl.short %></a></td>
                            <td><%= shortUrl.clicks %></td>
                        </tr>
                    <% }); %>
                
            </tbody>
        </table>
    </div>
</div>
</body>
</html>